.incident
  background: #fff
  border: 1px solid rgba(0,0,0,0.1)
  border-radius: 4px
  box-shadow: 0 0 10px rgba(0,0,0,0.05)
  padding: 20px
  margin-top: 30px
  display: flex

  &-success
    border-color: rgb(25, 135, 84)
  
  &-warning
    border-color: rgb(255, 193, 7)
  
  &-danger
    border-color: rgb(220, 53, 69)

.incident__content
  flex: 1 1 auto
  display: flex
  flex-direction: column

.incident__header
  flex: 1 1 auto

.incident__breadcrumbs
  color: rgba(0,0,0,0.5)
  font-size: 14px
  margin: 0 0 5px 0

  i
    font-size: 12px
    margin: 0 5px

.incident__name
  margin: 0

.incident__date
  color: rgba(0,0,0,0.5)
  font-size: 16px
  margin: 10px 0 0 0

.incident__kpi
  display: flex
  align-items: center


.kpi
  text-align: center
  margin-right: 70px

  &:last-child
    margin-right: 0

.kpi__value
  font-size: 60px
  margin: 0

.kpi__text
  font-size: 20px
  margin: 0


.incident__panel
  flex: 0 0 400px
  display: flex
  flex-direction: column

.incident__events
  flex: 1 1 auto

.incident__results
  display: flex
  justify-content: space-between
  border-top: 1px solid rgba(0,0,0,0.2)
  padding-top: 5px


.result
  text-align: center

.result__value
  font-size: 26px
  margin: 0
  font-weight: 600

.result__text
  font-size: 18px
  color: rgba(#000, 0.5)


.event
  display: flex
  font-size: 18px

.event__icon
  margin-right: 5px
