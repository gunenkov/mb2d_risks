.dashboard__active
  background: #00467a;
  padding: 30px 30px 40px 30px

.dashboard__header
  display: flex
  align-items: center

.dashboard__activeTitle
  color: #fff
  flex: 1 0 auto


.menu
  display: flex
  justify-content: space-between

.menu__item
  margin-right: 30px
  color: #fff
  text-decoration: none
  opacity: 0.8
  transition: 0.3s

  &:hover
    opacity: 1

  &:last-child
    margin-right: 0


.dashboard__logo
  flex: 1 0 auto
  text-align: right

  img
    max-width: 100px

.dashboard__history
  padding: 30px


.footer
  border-top: 1px solid rgba(#000, 0.1)
  padding: 15px

.footer__copy
  margin: 0
  
  a
    text-decoration: none


.modal
  label
    margin-bottom: 5px

  .form-group
    margin-bottom: 16px